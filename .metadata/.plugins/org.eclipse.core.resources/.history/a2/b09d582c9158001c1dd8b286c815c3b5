package structure;

public class C_Structure02P190 {

	// Person 내부의 정보를 쉽게 조회하기 위한 매서드 생성
	public static void getInfo(Person p) {
		System.out.println(p.name + "의 정보입니다.");
		System.out.println("이름 :" + p.name + ",나이 :);
	}
	
	public static void main(String[] args) {
		// 사람을 두 명 만들어보세요(a, b)
		Person a = new Person();
		a.name ="고정욱"
		a.age = 20;
		a.pNum = "010-1234-5678"
		a.uNum = 32;
		
		Person b = new Person();
		b.name ="고정욱"
		b.age = 20;
		b.pNum = "010-1234-5678"
		b.uNum = 32;
		
		getInfo(a);
		getInfo(b);
		
	}

}
